<p id="notice"><%= notice %></p>

<h1>Listing Plants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Placement</th>
      <th>Date planted</th>
      <th>Flowered At</th>
      <th>Flower Colour</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.name %></td>
        <td><%= plant.placement %></td>
        <td><%= Time.zone.parse(plant.date_planted.to_s).strftime("%d/%m/%Y") %></td>
        <td><%= plant.flowered_at %></td>
        <td><%= plant.flower_colour %></td>
        <td><%= plant.notes %></td>
        <td><%= link_to 'Show', plant %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

